/* miniprogram/pages/home_center/common_panel/index.js.wxss */
page {
    background-color: #f5f5f5;
}

.common-panel-backgroud {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 320px;
    background-color: #27c3d9;
}
.button-block {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 500rpx;
    background-color: #fff;
}

.common-panel-header {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 300rpx;
    height: 300rpx;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
}

.common-panel-header-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #E5443C;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    z-index: 2;
}
.common-panel-header-block .open-state {
    font-size: 50rpx;
    color: #fff;
    font-weight: bold;
}
.common-panel-header-block .device-name {
    color: #fff;
    font-size: 24rpx;
    margin-bottom: 20rpx;
}
.heart {
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: rgba(255, 0, 0, 0.2);
    width: 100%;
    height: 100%;
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    border-radius: 50%;
    animation: ease-out 1.5s pulse infinite;
}

.tabs-container {
    margin: 20rpx;
    /*background-color: #fff;*/

}
.nav-class {
    display: flex;
    justify-content: space-around;
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
    border-radius: 20rpx;
}
.tab-active-class {
    width: 100%;
    height: 100%;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    border-radius: 10rpx;
    background-color: yellow;
    transition: all .2s;
}
.tab-class {
    display: none;
}
.van-tabs--line .van-tabs__wrap {
    -webkit-border-radius: 20rpx;
    -moz-border-radius: 20rpx;
    border-radius: 20rpx;
}
@keyframes pulse {
    0% {
        opacity: 1;
        transform: scale(1, 1);
    }
    25% {
        opacity: 0.8;
        transform: scale(1.2, 1.2);
    }
    100% {
        transform: scale(1, 1);
        opacity: 1;
    }
}

.common-panel-header-dpName {
    width: 160px;
    height: 25px;
    text-align: center;
    font-family: HelveticaNeue;
    font-size: 12px;
    line-height: 24px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #fff;
}

.common-panel-header-dpValue {
    width: 114px;
    height: 75px;
    font-family: DINCondensed-Bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    font-size: 74px;
    color: #fff;
}

.roDpItem-normal {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 54px;
    padding: 16px 2px;
}

.roDpItem-normal:not(:last-child) {
    border-right: solid 1px #d6d6d6;
}

.roDpItem-two {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 54px;
    padding: 16px 33px;
}

.roDpItem-two:not(:last-child) {
    border-right: solid 1px #d6d6d6;
}

.roDpItem-one {
    display: flex;
    align-items: center;
    flex: 1;
    height: 64px;
    padding: 20px 24px;
    background-color: #fff;
    border-radius: 14px;
}

.roDpItem-dpName {
    flex: 1;
    width: 115px;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    line-height: 24px;
    color: rgba(80, 80, 80, 0.5);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.roDpItem-status {
    width: 115px;
    text-align: center;
    font-family: PingFangSC-Semibold;
    font-size: 18px;
    line-height: 24px;
    color: #505050;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.statuslist {
    padding-top: 16px;
    display: flex;
    justify-content: center;
    line-height: 12px;
    flex-wrap: wrap;
}

.scroll-view {
    padding: 16px 8px;
    width: auto;
    height: 100%;
}
